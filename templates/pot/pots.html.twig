<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Pots</title>
    </head>
    <body>
        <h1>Pots list:</h1>
            <table>
                <tr>
                    <th>Id</th>
                    <th>Producer</th>
                    <th>Colour</th>
                    <th>Diameter</th>
                    <th>Code</th>
                    <th>Plant</th>
                </tr>
                {% for pot in pots %}
                <tr>
                    <td>{{ pot.id }}</td>
                    <td>{{ pot.producer }}</td>
                    <td>{{ pot.colour }}</td>
                    <td>{{ pot.potDiameter }}</td>
                    <td>{{ pot.potCode }}</td>
                    <td>{{ pot.plant.variety|default }} {{ pot.plant.species|default }}</td>
                </tr>
                {% endfor %}
            </table>
            &nbsp &nbsp
            <br/>

    </body>
</html>
