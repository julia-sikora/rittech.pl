<header>
    <nav class="navbar navbar-expand-lg my-navbar bg-white">
        <a class="navbar-brand logo me-5 mb-2" href="{{ path('app_homepage') }}">
            <img src="{{ asset('image/logo.jpg') }}" alt="logo" id="logo">
            <text id='logo-app' class="d-none d-md-inline-block">{{ "homepage.logo" | trans }}</text>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainmenu">
            <span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="mainmenu">
            <ul class="navbar-nav">
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("app_plant_list") }}">{{ "homepage.plant.list"|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("app_pot_list") }}">{{ "homepage.plant.pots"|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("app_message_contact") }}">{{ "homepage.plant.contact"|trans }}</a>
                    </li>
                    {% if 'ROLE_ADMIN' in app.user.roles %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path("app_admin") }}">{{ "homepage.admin.nav"|trans }}</a>
                        </li>
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("app_logout") }}">{{ "homepage.logout"|trans }}</a>
                    </li>
                {% endif %}

                {% if app.user is null %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("app_login") }}">{{ "homepage.plant.login"|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("app_register") }}">{{ "homepage.plant.register"|trans }}</a>
                    </li>
                {% endif %}

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" role="button">{{ 'homepage.plant.other'|trans }}</a>
                    <div class="dropdown-menu">
                        <div class="nav-link-dropdown dropdown-item">Filament</div>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
</header>